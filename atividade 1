    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conversão de Reais para Dólares</title>
</head>
<body>

    <h1>Conversão de Reais para Dólares</h1>

    <script>
        function conversaoDolarParaReal() {
            
            const taxaCambio = 5.50;

           
            let valorReais = parseFloat(prompt("Digite a quantidade de Reais que deseja converter para Dólares:"));

            let valorDolares = valorReais / taxaCambio;

            
            alert("Valor em Dólares: US$ " + valorDolares.toFixed(2));
        }

        
        conversaoDolarParaReal();
    </script>

</body>
</html>
