    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Desconto Previdenciário</title>
</head>
<body>

    <h1>Cálculo de Desconto Previdenciário</h1>

    <script>
        function calcularDescontoPrevidenciario() {
            const descontoMaximo = 334.29;  

            let salario = parseFloat(prompt("Digite o salário do funcionário: R$"));

            
            let desconto = salario * 0.11;

            
            if (desconto > descontoMaximo) {
                desconto = descontoMaximo;
            }

            
            alert("O valor do desconto previdenciário é: R$ " + desconto.toFixed(2));
        }

        
        calcularDescontoPrevidenciario();
    </script>

</body>
</html>
