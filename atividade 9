    <title>Idade em Dias</title>
</head>
<body>

    <h1>Calcule sua Idade em Dias</h1>

    <script>
        function calcularIdadeEmDias() {
            
            let anos = parseInt(prompt("Digite sua idade:\nAnos:"));
            let meses = parseInt(prompt("Meses:"));
            let dias = parseInt(prompt("Dias:"));

           
            let totalDias = (anos * 365) + (meses * 30) + dias;

          
            alert("A sua idade em dias Ã©: " + totalDias);
        }

        
        calcularIdadeEmDias();
    </script>

</body>
</html>
