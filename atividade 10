    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Conversão de Velocidade</title>
</head>
<body>

    <h1>Conversão de Velocidade de m/s para km/h</h1>

    <script>
        function converterVelocidade() {
            
            let velocidadeMS = parseFloat(prompt("Digite a velocidade em m/s:"));

            
            let velocidadeKMH = velocidadeMS * 3.6;

         
            alert("A velocidade em km/h é: " + velocidadeKMH.toFixed(2) + " km/h");
        }

        
        converterVelocidade();
    </script>

</body>
</html>
